@model PhoneIndexViewModel


<h1>Phones</h1>


<div class="container">
        <table class="table table-hover table-responsive">
            <tr>
                <th>Title</th>
            </tr>
            @foreach (var phone in Model.Phones)
            {
        <tr>
            <td>@phone.ProductName</td>
            

            <td>
                <a class="btn btn-info"
                   asp-controller="Movies"
                   asp-action="ShowInfo"
                   asp-route-Id=@phone.Id>Info</a> ||
                <a class="btn btn-info"
                   asp-controller="Movies"
                   asp-action="ConfirmDelete"
                   asp-route-Id=@phone.Id>Delete</a> ||
                <a class="btn btn-info"
                   asp-controller="Movies"
                   asp-action="Update"
                   asp-route-Id=@phone.Id>Edit</a>
            </td>

        </tr>
            }
        </table>
        <div class="row">
            <a asp-controller="Catalog"
               asp-action="Add"
               class="btn btn-info">Add</a>
        </div>
    </div>